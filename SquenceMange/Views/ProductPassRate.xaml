<Page x:Class="SequenceManage.Views.ProductPassRate"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          Background="#FFEBEBEB">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1000"/>
        </Grid.RowDefinitions>

        <!-- 查询条件区域 -->
        <Border Grid.Row="0" Background="White" Padding="10"
                    BorderBrush="#FFCCCCCC" BorderThickness="0 0 0 1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <!-- 机型 -->
                <StackPanel Margin="5,0">
                    <TextBlock Text="机型" Margin="0 0 0 2"/>
                    <ComboBox Width="100" Height="26" FontSize="14"
                                  BorderBrush="#FFCCCCCC" SelectedIndex="0"
                                  IsEditable="True" DataContextChanged="ModelComboBox_TextChanged"
                                  ItemsSource="{Binding MachineKind}">
                    </ComboBox>
                </StackPanel>

                <!-- 模组 -->
                <StackPanel Margin="10,0">
                    <TextBlock Text="模组" Margin="0 0 0 2"/>
                    <ComboBox Width="100" Height="26" FontSize="14"
                                  BorderBrush="#FFCCCCCC" SelectedIndex="0" ItemsSource="{Binding Modules}">
                    </ComboBox>
                </StackPanel>

                <!-- 工艺 -->
                <StackPanel Margin="10,0">
                    <TextBlock Text="工艺" Margin="0 0 0 2"/>
                    <ComboBox Width="100" Height="26" FontSize="14"
                                  BorderBrush="#FFCCCCCC" SelectedIndex="0" ItemsSource="{Binding Processes}">
                    </ComboBox>
                </StackPanel>

                <!-- 工单 -->
                <StackPanel Margin="10,0">
                    <TextBlock Text="工单" Margin="0 0 0 2"/>
                    <TextBox Width="120" Height="26" FontSize="14"
                                 BorderBrush="#FFCCCCCC" x:Name="partNo"/>
                </StackPanel>

                <!-- 班组 -->
                <StackPanel Margin="10,0">
                    <TextBlock Text="班组" Margin="0 0 0 2"/>
                    <ComboBox Width="100" Height="26" FontSize="14"
                                  BorderBrush="#FFCCCCCC" SelectedIndex="0" ItemsSource="{Binding Teams}">
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="10,5" VerticalAlignment="Center">
                    <DatePicker x:Name="datePick" />
                </StackPanel>
                <!-- 查询按钮 -->
                <Button Content="查询" Margin="20,0,0,0" Padding="20,5"
                            Background="#FF0078D7" Foreground="White"
                            FontWeight="Bold" Click="QueryButton_Click"/>
            </StackPanel>
        </Border>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 站点选择 -->
            <Border Grid.Column="0" Background="White"
                        BorderBrush="#FFCCCCCC" BorderThickness="1">
                <StackPanel Margin="10">
                    <TextBlock Text="站点" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ItemsControl ItemsSource="{Binding Stations}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}" 
                                              IsChecked="{Binding IsChecked}"
                                              Margin="5,3">
                                    <CheckBox.Style>
                                        <Style TargetType="CheckBox">
                                            <Style.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Background" Value="#FF0078D7"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- 数据区域 -->
            <Border Grid.Column="1" Margin="10,0,0,0" Background="White"
                        BorderBrush="#FFCCCCCC" BorderThickness="1">
                <TextBlock Text="数据" Foreground="#FF888888" FontSize="24"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Page>
    