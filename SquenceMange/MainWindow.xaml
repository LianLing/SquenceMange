<Window x:Class="SquenceMange.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SquenceMange"
        mc:Ignorable="d"
        Title="HanSong" Height="450" Width="800">
    <DockPanel>
        <!-- 菜单栏 -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="标签管理">
                <MenuItem Header="保存记录" Click="SaveRecord_Click"/>
                <MenuItem Header="生成序列号" Click="GenerateSerialNumber_Click"/>
            </MenuItem>
        </Menu>

        <!-- 其他界面内容 -->
        <Grid>
            <Frame x:Name="mainFrame" x:FieldModifier="public" 
       NavigationUIVisibility="Hidden"/>
        </Grid>
    </DockPanel>
</Window>
