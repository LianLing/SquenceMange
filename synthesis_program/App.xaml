<Application x:Class="SequenceMange.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SequenceMange"
             ShutdownMode="OnMainWindowClose"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- 单元格样式 -->
        <Style x:Key="ReadOnlyCellStyle" TargetType="DataGridCell">
            <Setter Property="Background" Value="#FFF5F5F5"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="EditableCellStyle" TargetType="DataGridCell">
            <Setter Property="Background" Value="#FFFFFFE0"/>
            <Setter Property="BorderBrush" Value="#FFDAA520"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

    </Application.Resources>
</Application>
